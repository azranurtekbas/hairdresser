<body>


    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/kayıt2.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-center">
                <div class="col-md-9 ftco-animate pb-5 text-center">
                    <h2 class="mb-0 bread">GİRİŞ YAP</h2>
                    <p class="breadcrumbs"><span class="mr-2"><a href="Home/Index">Home <i class="ion-ios-arrow-round-forward"></i></a></span> <span>Services <i class="ion-ios-arrow-round-forward"></i></span></p>
                </div>
            </div>
        </div>
    </section>

  
    <section class="ftco-section ftco-booking bg-light">
        <div class="container ftco-relative">
            <div class="row justify-content-center">
                <div class="col-md-6 ftco-animate">
                    <!-- Butonlar -->
                    <div class="text-center mb-4">
                        <button onclick="showForm('userLogin')" class="btn btn-primary" style="margin: 5px; width: 100%;">Kullanıcı Girişi</button>
                        <button onclick="showForm('adminLogin')" class="btn btn-primary" style="margin: 5px; width: 100%;">Admin Girişi</button>
                        <button onclick="showForm('userRegister')" class="btn btn-primary" style="margin: 5px; width: 100%;">Üye Ol</button>
                    </div>


                    <div id="adminLogin" class="form-container" style="display: none;">
                        <form action="/Home/AdminLogin" method="post" class="appointment-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="admin_username" name="admin_username" placeholder="Admin Kullanıcı Adı">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="admin_password" name="admin_password" placeholder="Şifre">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </form>
                    </div>


                    <div id="userRegister" class="form-container" style="display: none;">
                    <form action="/Home/Register" method="post" class="appointment-form">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="kullaniciAdi" name="kullaniciAdi" placeholder="Kullanıcı Adı (isminizi girebilirsiniz)">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="mail" name="mail" placeholder="Email">
                                </div>
                            </div>
                            <!-- Telefon Numarası -->
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="telefonNo" class="font-weight-bold">Telefon Numarası:</label>
                                    <input type="tel" class="form-control" id="telefonNo" name="telefonNo" placeholder="Telefon Numarası" pattern="[0-9]{10}" required>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <div class="form-group">
                                    <input type="password" class="form-control" id="sifre" name="sifre" placeholder="Şifre">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
                    </form>
                 </div>
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    <!-- Logout Butonu Konteyneri -->
                    <div id="logoutButtonContainer"></div>

                    <!-- Kullanıcı Girişi Formu -->
                    <div id="userLogin" class="form-container" style="display: none;">
                        <form id="loginForm" action="#" method="post" class="appointment-form">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="user_name" placeholder="Kullanıcı Adı">
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <input type="password" class="form-control" id="user_password" placeholder="Şifre">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </form>
                    </div>



                </div>
            </div>
       </div>
   </section>
            


   <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Kullanıcı girişi kontrolü
            var loggedInUser = localStorage.getItem('userEmail');
            if (loggedInUser) {
                // Kullanıcı giriş yapmışsa, çıkış yap butonunu göster
                var logoutButtonHTML = `
                    <button id="logoutButton" class="btn btn-danger">Çıkış Yap</button>
                `;
                document.getElementById('loginForm').style.display = 'none'; // Giriş formunu gizle
                document.getElementById('logoutButtonContainer').innerHTML = logoutButtonHTML; // Çıkış butonunu göster

                // Çıkış yap butonuna tıklama olayı
                document.getElementById("logoutButton").addEventListener("click", function () {
                    // Çıkış işlemi
                    fetch('/Home/Logout', {
                        method: 'POST',
                    })
                        .then(response => {
                            // Başarılı çıkış sonrası sayfayı yeniden yönlendir
                            localStorage.removeItem("userEmail"); // Kullanıcı bilgisini sil
                            window.location.href = '/Home/Index'; // Ana sayfaya yönlendir
                        })
                        .catch(error => {
                            console.error('Çıkış yapılırken hata oluştu:', error);
                        });
                });

            } else {
                // Giriş yapılmadıysa, "Giriş Yap" butonunu göster
                var loginButtonHTML = `
                    <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                `;
                document.getElementById('loginForm').style.display = 'block'; // Giriş formunu göster
                document.getElementById('logoutButtonContainer').innerHTML = ''; // Çıkış butonunu gizle
            }
        });

        // Kullanıcı girişi işlemi
        document.getElementById("loginForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Formun normal submit işlemini engelle

            var email = document.getElementById('user_name').value;
            var password = document.getElementById('user_password').value;

            // Kullanıcı zaten giriş yaptıysa, uyarı göster ve çıkış yap
            if (localStorage.getItem("userEmail")) {
                alert("Lütfen önce çıkış yapın.");
                return;
            }

            // API'ye POST isteği gönder
            fetch('/api/account/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: email, password: password })
            })
                .then(response => response.json()) // Yanıtı JSON formatında alıyoruz
                .then(data => {
                    // Yanıtın başarılı olup olmadığını kontrol et
                    if (data.message === "Giriş başarılı.") {
                        // Başarılı giriş sonrası kullanıcıyı sakla ve yönlendir
                        localStorage.setItem('userEmail', email); // Kullanıcı email'ini sakla
                        window.location.href = '/Home/services1'; // Services sayfasına yönlendir
                    } else if (data.error) {
                        // Hatalı giriş mesajını göster
                        alert(data.error);
                    }
                })
                .catch(error => {
                    console.error('Hata:', error);
                    alert("Bir hata oluştu. Lütfen tekrar deneyin.");
                });
        });

   
                function showForm(formId) {
                    // Tüm formları gizle
                    document.querySelectorAll('.form-container').forEach(function (form) {
                        form.style.display = 'none';
                    });

                    // Seçilen formu göster
                    document.getElementById(formId).style.display = 'block';
                }

 </script>


