@model IEnumerable<haircare.Models.Calisan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CalısanAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CalısanSoyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UzmanlikAlani)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UygunlukSaati)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CalısanAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalısanSoyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UzmanlikAlani)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UygunlukSaati)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
