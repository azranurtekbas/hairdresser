                    <!-- Butonlar -->
                    <div class="text-center mb-4">
                        <button onclick="showForm('userLogin')" class="btn btn-primary" style="margin: 5px; width: 100%;">Kullanıcı Girişi</button>
                        <button onclick="showForm('adminLogin')" class="btn btn-primary" style="margin: 5px; width: 100%;">Admin Girişi</button>
