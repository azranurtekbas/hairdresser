                        </form>
                    </div>

                    <!-- Üye Kayıt Formu -->
                    <div id="userRegister" class="form-container" style="display: none;">
                        <form action="#" method="post" class="appointment-form">
                            <div class="row">
                                <div class="col-sm-12">
