    <script>
        document.getElementById("1").addEventListener("change", function () {
            var islemId = this.value; // islemId'yi al
            if (islemId) {
                fetch('/Home/GetCalisanlarByIslem?islemId=' + islemId) // islemId'yi gönder
                    .then(response => response.json())
                    .then(data => {
                        console.log("Sunucudan gelen veri:", data);

                        var calisanSelect = document.getElementById("2");
                        calisanSelect.innerHTML = '<option value="">Çalışan seçiniz</option>';

                        if (data && data.length > 0) {
                            data.forEach(calisan => {
                                if (calisan.calısanAd) {
                                    var option = document.createElement("option");
                                    option.value = calisan.id;
                                    option.text = calisan.calısanAd + ' ' + calisan.calısanSoyad;
                                    calisanSelect.appendChild(option);
                                } else {
                                    console.log("Çalışan bilgisi eksik veya hatalı:", calisan);
                                }
                            });
                        } else {
                            console.log("Seçilen işlem için çalışan bulunamadı.");
                        }
                    })
                    .catch(error => {
                        console.error('Hata:', error);
                    });
            } else {
                document.getElementById("2").innerHTML = '<option value="">Çalışan seçiniz</option>';
            }
        });
    </script>



